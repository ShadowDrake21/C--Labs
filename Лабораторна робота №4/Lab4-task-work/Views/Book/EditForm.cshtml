@using Lab4_task_work.Domain
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Book
@{
  Layout = "Layout";
  ViewData["Title"] = "Edit Book";
}
<h1>Edit Book</h1>
<form action="/Book/Edit" method="post">
  <input asp-for="Id" type="hidden" />
  <div>
    <label asp-for="Title"></label>
  </div>
  <div>
    <input asp-for="Title" type="text" />
  </div>
  <div>
    <label asp-for="Author"></label>
  </div>
  <div>
    <input asp-for="Author" type="text" />
  </div>
  <div>
    <label asp-for="Year"></label>
  </div>
  <div>
    <input asp-for="Year" type="number" min="1" max="2024" />
  </div>
  <div>
    <label asp-for="CanBeTakenHome"></label>
  </div>
  <div>
    <select asp-for="CanBeTakenHome">
      <option value="true">True</option>
      <option value="false">False</option>
    </select>
  </div>

  <div>
    <input name="Edit" type="submit" value="Edit book" />
  </div>
  <div>
    <a asp-controller="Book" asp-action="GetAll">Back to book list</a>
  </div>
</form>