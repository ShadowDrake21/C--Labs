@using Lab4_task_work.Domain
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Book>
@{
  Layout = "Layout";
  ViewData["Title"] = "Book list";
}
<h1>Book list</h1>
<table>
  <thead>
    <tr>
      <td>
        @Html.DisplayNameFor(model => model.Title)
      </td>
      <td>
        @Html.DisplayNameFor(model => model.Author)
      </td>
      <td>
        @Html.DisplayNameFor(model => model.Year)
      </td>
      <td>
        @Html.DisplayNameFor(model => model.CanBeTakenHome)
      </td>
      <td>
        Actions
      </td>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.CanBeTakenHome)
        </td>
        <td>
          <a asp-controller="Book" asp-action="EditForm" asp-route-id="@item.Id">Edit</a> |
          <a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
      </tr>
    }
    <tr>
      <form action="/Book/Add" method="post">
        <td>
          <input name="Title" type="text" />
        </td>
        <td>
          <input name="Author" type="text" />
        </td>
        <td>
          <input name="Year" type="number" min="1" max="2024" />
        </td>
        <td>
          <select name="CanBeTakenHome">
            <option value="true">True</option>
            <option value="false">False</option>
          </select>
        </td>
        <td>
          <input name="Add" type="submit" value="Add book" />
        </td>
      </form>
    </tr>
  </tbody>
</table>